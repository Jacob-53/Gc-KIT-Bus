# Development Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# For SQLite (Development)
DATABASE_URL=sqlite:///./bus_reservation.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/bus_reservation

# For MySQL (Alternative)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/bus_reservation

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Application Settings
PROJECT_NAME=Bus Reservation System
VERSION=1.0.0
DEBUG=true

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password